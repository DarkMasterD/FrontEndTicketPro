@model FrontEndTicketPro.Models.DashboardTecnicoDTO

@{
    ViewData["Title"] = "Inicio - Técnico";
}
@{
    var idInterno = Context.Session.GetInt32("id_usuario_interno") ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Hola, 👋 Bienvenido a <strong>TicketPro</strong></h3>
        <a href="#" class="btn btn-dark fw-bold px-4">
            <i class="bi bi-plus-circle me-2"></i> Crear un nuevo Ticket
        </a>


    </div>

    <!-- RESUMEN -->
    <h5 class="fw-bold mb-3">Resumen</h5>
    <div class="row g-3 mb-5">
        <!-- Resumen -->
        <div class="row g-3 mb-4 border p-3">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="p-2 rounded-pill text-center text-dark fw-bold" style="background-color: #ffe033;">
                        <i class="bi bi-ban text-danger fs-5"></i> <strong class="text-decoration-underline">3</strong> Tickets no asignados
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-2 rounded-pill text-center text-white fw-bold" style="background-color: #2196f3;">
                        <i class="bi bi-tools fs-5 text-dark"></i> <strong class="text-decoration-underline">3</strong> Tickets en progreso
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-2 rounded-pill text-center text-white fw-bold" style="background-color: #f44336;">
                        <i class="bi bi-fire fs-5"></i> <strong class="text-decoration-underline">5</strong> Tickets críticos
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-2 rounded-pill text-center text-white fw-bold" style="background-color: #8bc34a;">
                        <i class="bi bi-check-square-fill fs-5 text-success"></i> <strong class="text-decoration-underline">0</strong> Tickets resueltos
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- LISTADO DE TICKETS -->
    <h5 class="fw-bold mb-3">Tickets asignados</h5>
    <div class="list-group shadow-sm">
        @if (Model.Tickets != null && Model.Tickets.Count > 0)
        {
            @foreach (var ticket in Model.Tickets)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <span class="fw-semibold">@ticket.Titulo</span>
                        <div class="text-muted small">Ticket ID: #@ticket.Id_Ticket</div>
                    </div>
                    <span class="badge rounded-pill text-dark bg-warning text-uppercase px-3 py-1">@ticket.Estado</span>
                </div>
            }
        }
        else
        {
            <div class="list-group-item text-muted">No tienes tickets asignados actualmente.</div>
        }
    </div>
</div>

<script>

</script>