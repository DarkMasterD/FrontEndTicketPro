@model FrontEndTicketPro.Models.Admin.UsuarioEditarViewModel

<div class="container mt-5 mb-5 bg-white p-5 rounded shadow">
    <h3 class="text-center fw-bold mb-4">Crear / Editar Usuario Interno</h3>

    <form asp-action="GuardarUsuario" asp-controller="Admin" method="post">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="hidden" asp-for="TipoUsuario" value="I" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3 text-center" })

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label"> 
                    <i class="bi bi-person-fill me-1"></i>Nombre
                </label>
                <input asp-for="Nombre" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label asp-for="Apellido" class="form-label">
                    <i class="bi bi-person-fill me-1"></i>Apellido
                </label>
                <input asp-for="Apellido" class="form-control" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Usuario" class="form-label">
                    <i class="bi bi-person-fill me-1"></i>Usuario
                </label>
                <input asp-for="Usuario" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope-at-fill"></i> Correo
                </label>
                <input asp-for="Email" type="email" class="form-control" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Contrasena" class="form-label">
                    <i class="bi bi-shield-lock-fill"></i> Contraseña
                </label>
                <input asp-for="Contrasena" type="password" class="form-control" required/>
            </div>
            <div class="col-md-6">
                <label asp-for="Dui" class="form-label">
                    <i class="bi bi-fingerprint"></i> DUI
                </label>
                <input asp-for="Dui" class="form-control" id="inputDui" required/>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Direccion" class="form-label">
                    <i class="bi bi-building"></i> Dirección
                </label>
                <input asp-for="Direccion" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label asp-for="IdRol" class="form-label">
                    <i class="bi bi-people-fill"></i> Rol
                </label>
                <select asp-for="IdRol" class="form-select">
                    <option value="1">Administrador</option>
                    <option value="2">Técnico</option>
                </select>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Usuarios" class="btn btn-outline-dark px-4 me-2">Cancelar</a>
            <button type="submit" class="btn px-4 text-light fw-bold" style="background: #8FD344">Guardar</button>
        </div>
    </form>
</div>




