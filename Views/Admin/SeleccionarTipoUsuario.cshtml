@{
    ViewData["Title"] = "Seleccionar Tipo de Usuario";
}

<div class="container mt-5 mb-5 bg-white p-5 rounded shadow text-center">

    <h4 class="fw-bold mb-4">
        <i class="bi bi-person-circle me-2"></i>
        Seleccione el tipo de usuario que desea agregar
    </h4>

    <div class="row justify-content-center mb-3 mt-5">
        <div class="col-md-3 mb-3">
            <a asp-action="CrearInterno" asp-controller="Admin" class="btn btn-lg w-100 text-light" style="background: #3498DB">
                Usuario Interno
            </a>
            <p class="mt-2 text-muted fst-italic small">*Los usuarios internos son los empleados</p>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-action="CrearExterno" asp-controller="Admin" class="btn btn-dark btn-lg w-100">
                Usuario Externo
            </a>
            <p class="mt-2 text-muted fst-italic small">*Los usuarios externos son los clientes</p>
        </div>
    </div>
</div>
